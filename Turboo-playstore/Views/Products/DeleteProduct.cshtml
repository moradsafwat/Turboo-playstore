@model Turboo_playstore.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "DeleteProduct";
}
<div class="container">
    <h1>Delete Product</h1>

    <h3>Are you sure you want to delete this Product ?</h3>
    <hr />
    <div class="row">
        <div class="card" style="width: 100%">
            <img src="~/assets/img/portfolio/branding-2.jpg" class="card-img-top" alt="..." />
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Brand :</strong> @Model.Brand</li>
                <li class="list-group-item"><strong>Type :</strong> @Model.Type</li>
                <li class="list-group-item"><strong>Qty :</strong>@Model.Quantity</li>
                <li class="list-group-item"><strong>Category :</strong> @Model.CategoryId</li>
                <li class="list-group-item"><strong>Price :</strong> $ @Model.WholeSalePrice</li>
                <li class="list-group-item"><strong>Price :</strong> $ @Model.SellingPrice</li>
            </ul>
        </div>
        <div class="card-footer m-2">
            <form asp-controller="Products" asp-action="DeleteProduct" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" asp-controller="Products" class="btn btn-success">Back to List</a>
            </form>
        </div>
    </div>
</div>